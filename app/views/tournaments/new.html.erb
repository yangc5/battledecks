<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Make a New Tournament</h1>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <%= form_for(@tournament, :role=>"form") do |f|%>
            <div class="form-group">
              <%= f.label :name, :class=>"control-label" %>
              <%= f.text_field :name, :class => "form-control"%>
              <% if @tournament.errors[:name].any? %>
              <p class="help-block help-block-error"><%= @tournament.errors.full_messages_for(:name).to_sentence %></p>
              <% end %>
            </div>

            <%= f.submit "Create Tournament", :class=>'btn btn-default' %>
          <% end %>
        </div>
      </div>

    </div>

  </div>

</div>
